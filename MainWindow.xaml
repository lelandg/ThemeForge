<Window x:Class="ThemeForge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThemeForge"
        mc:Ignorable="d"
        Title="Theme Demo" Height="500" Width="800"
        Background="{DynamicResource MainBackground}"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">
            <Window.Resources>
        <!-- Dark Blue Theme for design-time preview -->
        <SolidColorBrush x:Key="MainBackground" Color="#1A1A2E"/>
        <SolidColorBrush x:Key="TitleBarBackground" Color="#0D2B45"/>
        <SolidColorBrush x:Key="MenuBackground" Color="#0D2B45"/>
        <SolidColorBrush x:Key="MenuForeground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SplitterBackground" Color="#0D2B45"/>
        <SolidColorBrush x:Key="GroupBoxBorder" Color="#3A3A5A"/>
        <SolidColorBrush x:Key="ButtonBackground" Color="#2C3E50"/>
        <SolidColorBrush x:Key="ButtonHoverBackground" Color="#34495E"/>
        <SolidColorBrush x:Key="ButtonPressedBackground" Color="#1C2E40"/>
        <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="PanelBackground" Color="Transparent"/>
        <SolidColorBrush x:Key="ControlBackground" Color="#202038"/>
        <SolidColorBrush x:Key="ControlBorderBrush" Color="#555577"/>
        <SolidColorBrush x:Key="ControlHoverBackground" Color="#303048"/>
        <SolidColorBrush x:Key="TextForeground" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="LabelForeground" Color="#7FA9D8"/>

            <!-- Button Style for design-time preview -->
            <Style x:Key="CustomButton" TargetType="Button">
                <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
                <Setter Property="Foreground" Value="{DynamicResource ButtonForeground}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource ControlBorderBrush}"/>
                <Setter Property="Padding" Value="10,5,10,5"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ButtonHoverBackground}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ButtonPressedBackground}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- GroupBox Style for design-time preview -->
            <Style x:Key="CustomGroupBox" TargetType="GroupBox">
                <Setter Property="BorderBrush" Value="{DynamicResource GroupBoxBorder}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="GroupBox">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Grid.RowSpan="2"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="3"/>
                                <Border Grid.Row="0" Background="{DynamicResource MainBackground}"
                                        Margin="10,0,0,0">
                                    <ContentPresenter ContentSource="Header"
                                                      RecognizesAccessKey="True"
                                                      Margin="5,0,5,0"/>
                                </Border>
                                <ContentPresenter Grid.Row="1"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="HeaderTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="{DynamicResource LabelForeground}" FontWeight="SemiBold"/>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Theme Demo" 
                   FontSize="24" FontWeight="Bold" 
                   Margin="0,0,0,20" 
                   Foreground="{DynamicResource LabelForeground}"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Theme Selector Panel -->
            <GroupBox Grid.Column="0" Header="Theme Selection" Style="{StaticResource CustomGroupBox}">
                <StackPanel>
                    <TextBlock Text="Select a theme:" Margin="0,0,0,10" Foreground="{DynamicResource TextForeground}"/>

                    <ComboBox x:Name="ThemeSelector" 
                              Margin="0,0,0,20" 
                              Height="30"
                              SelectionChanged="ThemeSelector_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="16" Height="16" Margin="0,0,5,0" 
                                            Background="{Binding WindowTheme.TitleBarBackground}" 
                                            BorderBrush="#555555" BorderThickness="1"/>
                                    <TextBlock Text="{Binding Name}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button Content="Open Theme Manager" 
                            Style="{StaticResource CustomButton}" 
                            Height="30" Margin="0,0,0,10"
                            Click="OpenThemeManager_Click"/>

                    <Button Content="Show Message Box" 
                            Style="{StaticResource CustomButton}" 
                            Height="30" Margin="0,0,0,10"
                            Click="ShowMessageBox_Click"/>

                    <Button Content="Show Question Dialog" 
                            Style="{StaticResource CustomButton}" 
                            Height="30"
                            Click="ShowQuestion_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- Preview Panel -->
            <GroupBox Grid.Column="1" Header="Preview" Style="{StaticResource CustomGroupBox}" Margin="10,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <GroupBox Header="Controls" Style="{StaticResource CustomGroupBox}">
                            <WrapPanel>
                                <Button Content="Standard Button" 
                                        Style="{StaticResource CustomButton}" 
                                        Margin="5" Width="120" Height="30"/>

                                <CheckBox Content="Check Box" Margin="5" 
                                          Foreground="{DynamicResource TextForeground}"/>

                                <RadioButton Content="Radio Button 1" Margin="5" 
                                             Foreground="{DynamicResource TextForeground}"/>

                                <RadioButton Content="Radio Button 2" Margin="5" 
                                             Foreground="{DynamicResource TextForeground}"/>

                                <TextBox Text="Text Box" Margin="5" Width="150"/>

                                <ComboBox Margin="5" Width="150">
                                    <ComboBoxItem Content="ComboBox Item 1"/>
                                    <ComboBoxItem Content="ComboBox Item 2"/>
                                    <ComboBoxItem Content="ComboBox Item 3"/>
                                </ComboBox>
                            </WrapPanel>
                        </GroupBox>

                        <GroupBox Header="Message Box Preview" Style="{StaticResource CustomGroupBox}">
                            <Grid Height="160">
                                <Border BorderThickness="1" BorderBrush="{Binding CurrentTheme.MessageBoxTheme.BorderBrush}">
                                    <Grid Background="{Binding CurrentTheme.MessageBoxTheme.WindowBackground}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Message Title -->
                                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                                   Text="Sample Message"
                                                   Background="{Binding CurrentTheme.MessageBoxTheme.TitleBackground}" 
                                                   Foreground="{Binding CurrentTheme.MessageBoxTheme.TitleForeground}" 
                                                   Padding="10,5"/>

                                        <!-- Icon (placeholder) -->
                                        <Border Grid.Row="1" Grid.Column="0" Width="32" Height="32" 
                                                Margin="10,0" VerticalAlignment="Center">
                                            <TextBlock Text="ℹ" FontSize="24" HorizontalAlignment="Center"
                                                       Foreground="{DynamicResource ButtonBackground}"/>
                                        </Border>

                                        <!-- Message Text -->
                                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                                   Text="This is a sample message box. Theme changes will be reflected here."
                                                   VerticalAlignment="Center" TextWrapping="Wrap" 
                                                   Foreground="{DynamicResource TextForeground}"/>

                                        <!-- Buttons -->
                                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" 
                                                    HorizontalAlignment="Center" Margin="0,0,0,10">
                                            <Button Content="OK" Width="80" Height="28" Margin="5,0"
                                                    Background="{Binding CurrentTheme.MessageBoxTheme.ButtonBackground}"
                                                    Foreground="{Binding CurrentTheme.MessageBoxTheme.ButtonForeground}"
                                                    BorderBrush="{Binding CurrentTheme.MessageBoxTheme.ButtonOutline}"/>
                                            <Button Content="Cancel" Width="80" Height="28" Margin="5,0"
                                                    Background="{Binding CurrentTheme.MessageBoxTheme.ButtonBackground}"
                                                    Foreground="{Binding CurrentTheme.MessageBoxTheme.ButtonForeground}"
                                                    BorderBrush="{Binding CurrentTheme.MessageBoxTheme.ButtonOutline}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <TextBlock Text="Current Theme: " 
                       VerticalAlignment="Center" 
                       Foreground="{DynamicResource TextForeground}"/>
            <TextBlock x:Name="CurrentThemeText" 
                       Text="Default" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center" 
                       Foreground="{DynamicResource LabelForeground}"/>
        </StackPanel>
    </Grid>
</Window>

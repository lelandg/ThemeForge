<Window x:Class="ThemeForge.Themes.ThemeManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ThemeForge.Themes" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Title="Theme Manager" 
        Height="750" Width="1100"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Background="{DynamicResource MainBackground}">
    <Window.Resources>
        <!-- Default theme colors for design-time preview -->
        <SolidColorBrush x:Key="MainBackground" Color="#F0F5FA"/>
        <SolidColorBrush x:Key="TitleBarBackground" Color="#3E85C6"/>
        <SolidColorBrush x:Key="TextForeground" Color="#333333"/>
        <SolidColorBrush x:Key="LabelForeground" Color="#1E5A9C"/>
        <SolidColorBrush x:Key="MenuBackground" Color="#3E85C6"/>
        <SolidColorBrush x:Key="MenuForeground" Color="White"/>
        <SolidColorBrush x:Key="MainAccent" Color="#3E85C6"/>
        <SolidColorBrush x:Key="AlternateTextForeground" Color="#333333"/>
        <SolidColorBrush x:Key="SplitterBackground" Color="#3E85C6"/>
        <SolidColorBrush x:Key="GroupBoxBorder" Color="#B0C4DE"/>

        <!-- Style for color editor rows to ensure consistent sizing -->
        <Style x:Key="ColorEditorRowStyle" TargetType="Grid">
            <Setter Property="Margin" Value="5,2" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
        <Style x:Key="ColorLabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Margin" Value="0,0,5,0" />
            <Setter Property="Foreground" Value="{DynamicResource TextForeground}" />
        </Style>
        <Style x:Key="ColorSwatchStyle" TargetType="Border">
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{DynamicResource GroupBoxBorder}" />
        </Style>
        <Style x:Key="ColorChangeButtonStyle" TargetType="Button" BasedOn="{StaticResource CustomButton}">
            <Setter Property="Width" Value="Auto" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Padding" Value="10,0" />
        </Style>
        <SolidColorBrush x:Key="PanelBackground" Color="#00FFFFFF"/>
        <SolidColorBrush x:Key="ControlBackground" Color="#F0F5FF"/>
        <SolidColorBrush x:Key="ComboBoxBackground" Color="#F0F5FF"/>
        <SolidColorBrush x:Key="ComboBoxItemBackground" Color="#F0F5FF"/>
        <SolidColorBrush x:Key="ComboBoxItemHoverBackground" Color="#E0E5EF"/>
        <SolidColorBrush x:Key="ComboBoxItemSelectedBackground" Color="#3E85C6"/>
        <SolidColorBrush x:Key="ControlBorderBrush" Color="#B0C4DE"/>
        <SolidColorBrush x:Key="ControlHoverBackground" Color="#E0E5EF"/>
        <SolidColorBrush x:Key="ButtonBackground" Color="#3E85C6"/>
        <SolidColorBrush x:Key="ButtonHoverBackground" Color="#5E95D6"/>
        <SolidColorBrush x:Key="ButtonPressedBackground" Color="#2E75B6"/>
        <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
        <SolidColorBrush x:Key="MsgBoxWindowBackground" Color="#F0F5FA"/>
        <SolidColorBrush x:Key="MsgBoxTitleBackground" Color="#3E85C6"/>
        <SolidColorBrush x:Key="MsgBoxTitleForeground" Color="White"/>
        <SolidColorBrush x:Key="MsgBoxBorderBrush" Color="#3E85C6"/>
        <SolidColorBrush x:Key="MsgBoxButtonBackground" Color="#3E85C6"/>
        <SolidColorBrush x:Key="MsgBoxButtonHoverBackground" Color="#5E95D6"/>
        <SolidColorBrush x:Key="MsgBoxButtonPressedBackground" Color="#2E75B6"/>
        <SolidColorBrush x:Key="MsgBoxButtonForeground" Color="White"/>
        <SolidColorBrush x:Key="MsgBoxButtonDisabledBackground" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="MsgBoxButtonDisabledForeground" Color="#999999"/>
        <SolidColorBrush x:Key="MsgBoxButtonOutline" Color="#B0C4DE"/>
    </Window.Resources>
            <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" Background="{DynamicResource TitleBarBackground}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Theme Manager" VerticalAlignment="Center" Margin="15,0,0,0"
                       Foreground="{DynamicResource MenuForeground}" FontWeight="SemiBold"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="MinimizeButton" Content="_" Width="45" Height="32" BorderThickness="0"
                        Background="Transparent" Foreground="{DynamicResource MenuForeground}"
                        Click="MinimizeButton_Click"/>
                <Button x:Name="MaximizeButton" Content="□" Width="45" Height="32" BorderThickness="0"
                        Background="Transparent" Foreground="{DynamicResource MenuForeground}"
                        Click="MaximizeButton_Click"/>
                <Button x:Name="CloseWindowButton" Content="✕" Width="45" Height="32" BorderThickness="0"
                        Background="Transparent" Foreground="{DynamicResource MenuForeground}"
                        Click="CloseWindowButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Select a theme from the list or create your own custom theme" 
                   TextWrapping="Wrap" Margin="0,0,0,10" Foreground="{DynamicResource TextForeground}"/>

        <!-- Theme Selection -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ComboBox x:Name="ThemeSelector"
                      Grid.Column="0"
                      Margin="0,0,10,0"
                      Height="30"
                      Background="{DynamicResource ComboBoxBackground}"
                      Style="{StaticResource CustomComboBox}"
                      ItemContainerStyle="{StaticResource CustomComboBoxItem}"
                      SelectedIndex="0"
                      SelectionChanged="ThemeSelector_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="16" Height="16" Margin="0,0,5,0" 
                                    Background="{Binding WindowTheme.TitleBarBackground}" 
                                    BorderBrush="#555555" BorderThickness="1"/>
                            <TextBlock Text="{Binding Name}" d:DataContext="{d:DesignInstance }" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="NewThemeButton" 
                        Content="New Theme" 
                        Style="{DynamicResource CustomButton}" 
                        Width="100" Height="30"
                        Click="NewThemeButton_Click"/>

                <Button x:Name="DeleteThemeButton" 
                        Content="Delete Theme" 
                        Style="{DynamicResource CustomButton}" 
                        Width="100" Height="30" Margin="5,0,0,0"
                        Click="DeleteThemeButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Theme Editor -->
        <TabControl Grid.Row="2" Margin="0,0,0,10" Background="{DynamicResource MainBackground}">
            <!-- Preview Tab -->
            <TabItem Header="Preview">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <GroupBox Header="Window Preview" Style="{DynamicResource CustomGroupBox}" Margin="5,10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Title Bar -->
                                <Border Grid.Row="0" Background="{Binding CurrentTheme.WindowTheme.TitleBarBackground}" Height="30">
                                    <Grid>
                                        <TextBlock Text="Window Title" 
                                                   VerticalAlignment="Center" 
                                                   Margin="10,0" 
                                                   Foreground="White"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="_" Width="30" Margin="2,0"/>
                                            <Button Content="□" Width="30" Margin="2,0"/>
                                            <Button Content="✕" Width="30" Margin="2,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Main Content -->
                                <Grid Grid.Row="1" Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Left Panel -->
                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <GroupBox Header="Controls" Style="{DynamicResource CustomGroupBox}">
                                            <StackPanel>
                                                <Button Content="Standard Button" Margin="5" Style="{DynamicResource CustomButton}"/>

                                                <CheckBox Content="Check Box" Margin="5" 
                                                          Foreground="{Binding CurrentTheme.WindowTheme.TextForeground}"/>

                                                <RadioButton Content="Radio Button 1" Margin="5" 
                                                             Foreground="{Binding CurrentTheme.WindowTheme.TextForeground}"/>

                                                <RadioButton Content="Radio Button 2" Margin="5" 
                                                             Foreground="{Binding CurrentTheme.WindowTheme.TextForeground}"/>

                                                <ComboBox Margin="5" SelectedIndex="0"
                                                          Background="{DynamicResource ComboBoxBackground}"
                                                          Style="{StaticResource CustomComboBox}"
                                                          ItemContainerStyle="{StaticResource CustomComboBoxItem}">
                                                    <ComboBoxItem Content="ComboBox Item 1"/>
                                                    <ComboBoxItem Content="ComboBox Item 2"/>
                                                    <ComboBoxItem Content="ComboBox Item 3"/>
                                                </ComboBox>

                                                <TextBox Text="Text Box" Margin="5"/>

                                                <Slider Minimum="0" Maximum="100" Value="50" Margin="5"/>
                                            </StackPanel>
                                        </GroupBox>
                                    </StackPanel>

                                    <!-- Right Panel -->
                                    <TabControl Grid.Column="1">
                                        <TabItem Header="Tab 1">
                                            <StackPanel>
                                                <TextBlock Text="Sample Content Area" 
                                                           Margin="10" 
                                                           Foreground="{Binding CurrentTheme.WindowTheme.TextForeground}"/>

                                                <ListBox Height="100" Margin="10">
                                                    <ListBoxItem Content="ListBox Item 1"/>
                                                    <ListBoxItem Content="ListBox Item 2"/>
                                                    <ListBoxItem Content="ListBox Item 3"/>
                                                </ListBox>
                                            </StackPanel>
                                        </TabItem>
                                        <TabItem Header="Tab 2">
                                            <TextBlock Text="Additional content would go here" 
                                                       Margin="10" 
                                                       Foreground="{Binding CurrentTheme.WindowTheme.TextForeground}"/>
                                        </TabItem>
                                    </TabControl>
                                </Grid>
                            </Grid>
                        </GroupBox>

                        <!-- Message Box Preview -->
                        <GroupBox Header="Message Box Preview" Style="{DynamicResource CustomGroupBox}" Margin="5,10">
                            <Grid Height="160">
                                <Border BorderThickness="1" BorderBrush="{Binding CurrentTheme.MessageBoxTheme.BorderBrush}">
                                    <Grid Background="{Binding CurrentTheme.MessageBoxTheme.WindowBackground}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Message Title -->
                                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                                   Text="Sample Message"
                                                   Background="{Binding CurrentTheme.MessageBoxTheme.TitleBackground}" 
                                                   Foreground="{Binding CurrentTheme.MessageBoxTheme.TitleForeground}" 
                                                   Padding="10,5"/>

                                        <!-- Icon (placeholder) -->
                                        <Border Grid.Row="1" Grid.Column="0" Width="32" Height="32" 
                                                Margin="10,0" VerticalAlignment="Center">
                                            <TextBlock Text="ℹ" FontSize="24" HorizontalAlignment="Center"
                                                       Foreground="{DynamicResource ButtonBackground}"/>
                                        </Border>

                                        <!-- Message Text -->
                                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                                   Text="This is a sample message box. Theme changes will be reflected here."
                                                   VerticalAlignment="Center" TextWrapping="Wrap" 
                                                   Foreground="{DynamicResource TextForeground}"/>

                                        <!-- Buttons -->
                                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" 
                                                    HorizontalAlignment="Center" Margin="0,0,0,10">
                                            <Button Content="OK" Width="80" Height="28" Margin="5,0"
                                                    Background="{Binding CurrentTheme.MessageBoxTheme.ButtonBackground}"
                                                    Foreground="{Binding CurrentTheme.MessageBoxTheme.ButtonForeground}"
                                                    BorderBrush="{Binding CurrentTheme.MessageBoxTheme.ButtonOutline}"/>
                                            <Button Content="Cancel" Width="80" Height="28" Margin="5,0"
                                                    Background="{Binding CurrentTheme.MessageBoxTheme.ButtonBackground}"
                                                    Foreground="{Binding CurrentTheme.MessageBoxTheme.ButtonForeground}"
                                                    BorderBrush="{Binding CurrentTheme.MessageBoxTheme.ButtonOutline}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Window Theme Tab -->
            <TabItem Header="Window Theme">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <GroupBox Header="Main Colors" Style="{DynamicResource CustomGroupBox}" Margin="5,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Left Column -->
                                <Grid Grid.Column="0" Grid.Row="0" Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Main Background:" VerticalAlignment="Center"
                                            Foreground="{DynamicResource TextForeground}" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.MainBackground}" 
                                            Height="30" Margin="5,0" BorderBrush="{DynamicResource GroupBoxBorder}" BorderThickness="1"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{DynamicResource CustomButton}" 
                                            Width="Auto" MinWidth="80" Height="30" Padding="10,0" Click="EditMainBackground_Click"/>
                                </Grid>

                                <Grid Grid.Column="0" Grid.Row="1" Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Text Foreground:" VerticalAlignment="Center"
                                            Foreground="{DynamicResource TextForeground}" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.TextForeground}" 
                                            Height="30" Margin="5,0" BorderBrush="{DynamicResource GroupBoxBorder}" BorderThickness="1"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{DynamicResource CustomButton}" 
                                            Width="Auto" MinWidth="80" Height="30" Padding="10,0" Click="EditTextForeground_Click"/>
                                </Grid>

                                <Grid Grid.Column="0" Grid.Row="2" Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="GroupBox Border:" VerticalAlignment="Center"
                                            Foreground="{DynamicResource TextForeground}" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.GroupBoxBorder}" 
                                            Height="30" Margin="5,0" BorderBrush="{DynamicResource GroupBoxBorder}" BorderThickness="1"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{DynamicResource CustomButton}" 
                                            Width="Auto" MinWidth="80" Height="30" Padding="10,0" Click="EditGroupBoxBorder_Click"/>
                                </Grid>

                                <!-- Right Column -->
                                <Grid Grid.Column="1" Grid.Row="0" Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Title Bar Background:" VerticalAlignment="Center"
                                            Foreground="{DynamicResource TextForeground}" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.TitleBarBackground}" 
                                            Height="30" Margin="5,0" BorderBrush="{DynamicResource GroupBoxBorder}" BorderThickness="1"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{DynamicResource CustomButton}" 
                                            Width="Auto" MinWidth="80" Height="30" Padding="10,0" Click="EditTitleBarBackground_Click"/>
                                </Grid>

                                <Grid Grid.Column="1" Grid.Row="1" Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Label Foreground:" VerticalAlignment="Center"
                                            Foreground="{DynamicResource TextForeground}" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.LabelForeground}" 
                                            Height="30" Margin="5,0" BorderBrush="{DynamicResource GroupBoxBorder}" BorderThickness="1"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{DynamicResource CustomButton}" 
                                            Width="Auto" MinWidth="80" Height="30" Padding="10,0" Click="EditLabelForeground_Click"/>
                                </Grid>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Button Colors" Style="{DynamicResource CustomGroupBox}" Margin="5,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Left Column -->
                                <Grid Grid.Column="0" Grid.Row="0" Style="{StaticResource ColorEditorRowStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Button Background:" Style="{StaticResource ColorLabelStyle}"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.ButtonBackground}" 
                                            Style="{StaticResource ColorSwatchStyle}"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{StaticResource ColorChangeButtonStyle}" 
                                            Click="EditButtonBackground_Click"/>
                                </Grid>

                                                                    <Grid Grid.Column="0" Grid.Row="1" Style="{StaticResource ColorEditorRowStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Button Pressed:" Style="{StaticResource ColorLabelStyle}"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.ButtonPressedBackground}" 
                                            Style="{StaticResource ColorSwatchStyle}"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{StaticResource ColorChangeButtonStyle}" 
                                            Click="EditButtonPressedBackground_Click"/>
                                </Grid>

                                <!-- Right Column -->
                                                                    <Grid Grid.Column="1" Grid.Row="0" Style="{StaticResource ColorEditorRowStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Button Hover:" Style="{StaticResource ColorLabelStyle}"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.ButtonHoverBackground}" 
                                            Style="{StaticResource ColorSwatchStyle}"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{StaticResource ColorChangeButtonStyle}" 
                                            Click="EditButtonHoverBackground_Click"/>
                                </Grid>

                                                                    <Grid Grid.Column="1" Grid.Row="1" Style="{StaticResource ColorEditorRowStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Button Foreground:" Style="{StaticResource ColorLabelStyle}"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.ButtonForeground}" 
                                            Style="{StaticResource ColorSwatchStyle}"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{StaticResource ColorChangeButtonStyle}" 
                                            Click="EditButtonForeground_Click"/>
                                </Grid>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Additional Colors" Style="{DynamicResource CustomGroupBox}" Margin="5,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Left Column -->
                                <Grid Grid.Column="0" Grid.Row="0" Style="{StaticResource ColorEditorRowStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Main Accent:" Style="{StaticResource ColorLabelStyle}"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.MainAccent}" Style="{StaticResource ColorSwatchStyle}"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{StaticResource ColorChangeButtonStyle}" Click="EditMainAccent_Click"/>
                                </Grid>

                                    <Grid Grid.Column="0" Grid.Row="1" Style="{StaticResource ColorEditorRowStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Menu Foreground:" Style="{StaticResource ColorLabelStyle}"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.MenuForeground}" Style="{StaticResource ColorSwatchStyle}"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{StaticResource ColorChangeButtonStyle}" Click="EditMenuForeground_Click"/>
                                </Grid>

                                    <Grid Grid.Column="0" Grid.Row="2" Style="{StaticResource ColorEditorRowStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Splitter Background:" Style="{StaticResource ColorLabelStyle}"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.SplitterBackground}" Style="{StaticResource ColorSwatchStyle}"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{StaticResource ColorChangeButtonStyle}" Click="EditSplitterBackground_Click"/>
                                </Grid>

                                    <Grid Grid.Column="0" Grid.Row="3" Style="{StaticResource ColorEditorRowStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Control Background:" Style="{StaticResource ColorLabelStyle}"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.ControlBackground}" Style="{StaticResource ColorSwatchStyle}"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{StaticResource ColorChangeButtonStyle}" Click="EditControlBackground_Click"/>
                                </Grid>

                                    <Grid Grid.Column="0" Grid.Row="4" Style="{StaticResource ColorEditorRowStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Control Hover:" Style="{StaticResource ColorLabelStyle}"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.ControlHoverBackground}" Style="{StaticResource ColorSwatchStyle}"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{StaticResource ColorChangeButtonStyle}" Click="EditControlHoverBackground_Click"/>
                                </Grid>

                                <!-- Right Column -->
                                    <Grid Grid.Column="1" Grid.Row="0" Style="{StaticResource ColorEditorRowStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Menu Background:" Style="{StaticResource ColorLabelStyle}"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.MenuBackground}" Style="{StaticResource ColorSwatchStyle}"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{StaticResource ColorChangeButtonStyle}" Click="EditMenuBackground_Click"/>
                                </Grid>

                                    <Grid Grid.Column="1" Grid.Row="1" Style="{StaticResource ColorEditorRowStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Alt Text Foreground:" Style="{StaticResource ColorLabelStyle}"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.AlternateTextForeground}" Style="{StaticResource ColorSwatchStyle}"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{StaticResource ColorChangeButtonStyle}" Click="EditAlternateTextForeground_Click"/>
                                </Grid>

                                    <Grid Grid.Column="1" Grid.Row="2" Style="{StaticResource ColorEditorRowStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Panel Background:" Style="{StaticResource ColorLabelStyle}"/>
                                    <Border Grid.Column="1" Background="{Binding CurrentTheme.WindowTheme.PanelBackground}" Style="{StaticResource ColorSwatchStyle}"/>
                                    <Button Grid.Column="2" Content="Change..." Style="{StaticResource ColorChangeButtonStyle}" Click="EditPanelBackground_Click"/>
                                </Grid>

                                    <Grid Grid.Column="1" Grid.Row="3" Style="{StaticResource ColorEditorRowStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

<Window x:Class="ThemeForge.Themes.Dialogs.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Color Picker" 
        Height="565" Width="650"
        MinHeight="565" MinWidth="650"
        MaxWidth="650"
        WindowStartupLocation="CenterOwner"
        Background="#FF2D2D30"
        Foreground="#FFCCCCCC"
        ResizeMode="CanResize">
    <Window.Resources>
        <!-- TextBox Style for consistent look -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF3D3D3D" />
            <Setter Property="Foreground" Value="#FFCCCCCC" />
            <Setter Property="BorderBrush" Value="#FF555555" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Height" Value="22" />
            <Setter Property="Padding" Value="4,2" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4D4D4D"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="#FF4D4D4D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="#FF3D3D3D" 
                CornerRadius="4" 
                Padding="10,5">
            <TextBlock Text="Select a color" 
                       FontSize="14" 
                       Foreground="#FFCCCCCC"/>
        </Border>

        <!-- Color Picker Main Area -->
        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="240"/>
            </Grid.ColumnDefinitions>

            <!-- Color Palette -->
            <Border Grid.Column="0" 
                    Background="#FF3D3D3D" 
                    CornerRadius="4" 
                    Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>

                    <!-- Main color area -->
                    <Border Grid.Row="0" 
                            Margin="10" 
                            ClipToBounds="True" 
                            CornerRadius="4">
                        <Canvas x:Name="ColorCanvas" 
                                Background="#FF0000" 
                                MouseDown="ColorCanvas_MouseDown" 
                                MouseMove="ColorCanvas_MouseMove"
                                MouseUp="ColorCanvas_MouseUp">
                            <!-- White to Transparent Gradient Overlay (Horizontal) -->
                            <Rectangle x:Name="WhiteGradientRect"
                                       Width="{Binding ActualWidth, ElementName=ColorCanvas}" 
                                       Height="{Binding ActualHeight, ElementName=ColorCanvas}">
                                <Rectangle.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                        <GradientStop Color="#00FFFFFF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>

                            <!-- Black to Transparent Gradient Overlay (Vertical) -->
                            <Rectangle x:Name="BlackGradientRect"
                                       Width="{Binding ActualWidth, ElementName=ColorCanvas}" 
                                       Height="{Binding ActualHeight, ElementName=ColorCanvas}">
                                <Rectangle.Fill>
                                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                        <GradientStop Color="#FF000000" Offset="0"/>
                                        <GradientStop Color="#00000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>

                            <!-- Color selector indicator -->
                            <Ellipse x:Name="ColorSelector" 
                                     Width="14" Height="14" 
                                     Stroke="White" 
                                     StrokeThickness="2"
                                     Fill="Transparent"
                                     Canvas.Left="-7" Canvas.Top="-7">
                                <Ellipse.Effect>
                                    <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.5"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </Canvas>
                    </Border>

                    <!-- Hue slider -->
                    <Grid Grid.Row="1" Margin="10,0,10,10">
                        <Border CornerRadius="4" ClipToBounds="True">
                            <Canvas x:Name="HueCanvas" 
                                    Height="20"
                                    MouseDown="HueCanvas_MouseDown" 
                                    MouseMove="HueCanvas_MouseMove"
                                    MouseUp="HueCanvas_MouseUp">
                                <!-- Hue gradient -->
                                <Rectangle Width="{Binding ActualWidth, ElementName=HueCanvas}" 
                                           Height="{Binding ActualHeight, ElementName=HueCanvas}">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#FFFF0000" Offset="0.00"/>
                                            <GradientStop Color="#FFFFFF00" Offset="0.17"/>
                                            <GradientStop Color="#FF00FF00" Offset="0.33"/>
                                            <GradientStop Color="#FF00FFFF" Offset="0.50"/>
                                            <GradientStop Color="#FF0000FF" Offset="0.67"/>
                                            <GradientStop Color="#FFFF00FF" Offset="0.83"/>
                                            <GradientStop Color="#FFFF0000" Offset="1.00"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <!-- Hue selector indicator -->
                                <Canvas x:Name="HueSelectorCanvas" Canvas.Left="0">
                                    <Rectangle x:Name="HueSelector" 
                                               Width="6" Height="20" 
                                               Canvas.Left="-3" Canvas.Top="0">
                                        <Rectangle.Fill>
                                            <SolidColorBrush Color="White" />
                                        </Rectangle.Fill>
                                        <Rectangle.Effect>
                                            <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.5"/>
                                        </Rectangle.Effect>
                                    </Rectangle>
                                </Canvas>
                            </Canvas>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Color Information -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Color preview section -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- New color preview -->
                    <Border Grid.Column="0" 
                            Background="#FF3D3D3D" 
                            CornerRadius="4" 
                            Height="70" 
                            Margin="0,0,4,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="New" 
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center"
                                       FontSize="11"
                                       Foreground="#FFCCCCCC"/>

                            <Border Grid.Row="1" 
                                    Margin="8,4,8,8" 
                                    CornerRadius="3" 
                                    BorderThickness="1" 
                                    BorderBrush="#FF555555">
                                <Rectangle x:Name="NewColorPreview" Fill="#FF0000"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Current color preview -->
                    <Border Grid.Column="1" 
                            Background="#FF3D3D3D" 
                            CornerRadius="4" 
                            Height="70" 
                            Margin="4,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Current" 
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center"
                                       FontSize="11"
                                       Foreground="#FFCCCCCC"/>

                            <Border Grid.Row="1" 
                                    Margin="8,4,8,8" 
                                    CornerRadius="3" 
                                    BorderThickness="1" 
                                    BorderBrush="#FF555555">
                                <Rectangle x:Name="CurrentColorPreview" Fill="#FF0000"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Eyedropper button -->
                <Border Grid.Row="1" 
                        Background="#FF3D3D3D" 
                        CornerRadius="4" 
                        Margin="0,12,0,0">
                    <Button x:Name="EyeDropperButton"
                            Height="32"
                            Margin="8"
                            Style="{DynamicResource CustomButton}"
                            Click="EyeDropperButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Path x:Name="EyeDropperIcon" 
                                  Width="14" Height="14" 
                                  Margin="0,0,6,0"
                                  Fill="#FFCCCCCC" 
                                  Stretch="Uniform" 
                                  Data="M12.9,3.1c-1.1-1.1-2.9-1.1-4,0L7.5,4.5L5,2L3,4l2.5,2.5L1,11c-0.5,0.5-0.5,1.3,0,1.9l2.1,2.1C3.4,15.3,3.7,15.5,4,15.5s0.6-0.1,0.9-0.4l4.5-4.5L12,13l2-2l-2.5-2.5l1.4-1.4C14,5.9,14,4.2,12.9,3.1z M4,13.5L2.5,12L7,7.5L8.5,9L4,13.5z"/>
                            <TextBlock Text="Pick Screen Color" 
                                       VerticalAlignment="Center"
                                       FontSize="11"
                                       Foreground="#FFCCCCCC"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- Color Values Section -->
                <Border Grid.Row="2" 
                        Background="#FF3D3D3D" 
                        CornerRadius="4"
                        Margin="0,12,0,0">
                    <Grid Margin="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                   Text="Color Values"
                                   FontWeight="SemiBold"
                                   FontSize="12"
                                   Margin="0,0,0,8"
                                   Foreground="#FFCCCCCC"/>

                        <!-- RGB Values -->
                        <!-- Red -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="R:" 
                                   Margin="0,0,6,6" 
                                   VerticalAlignment="Center"
                                   FontSize="11"
                                   Foreground="#FFCCCCCC"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 x:Name="RedTextBox" 
                                 Margin="0,0,0,6" 
                                 PreviewTextInput="NumericTextBox_PreviewTextInput"
                                 TextChanged="RgbTextBox_TextChanged"/>

                        <!-- Green -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="G:" 
                                   Margin="0,0,6,6" 
                                   VerticalAlignment="Center"
                                   FontSize="11"
                                   Foreground="#FFCCCCCC"/>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                                 x:Name="GreenTextBox" 
                                 Margin="0,0,0,6" 
                                 PreviewTextInput="NumericTextBox_PreviewTextInput"
                                 TextChanged="RgbTextBox_TextChanged"/>

                        <!-- Blue -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="B:" 
                                   Margin="0,0,6,6" 
                                   VerticalAlignment="Center"
                                   FontSize="11"
                                   Foreground="#FFCCCCCC"/>
                        <TextBox Grid.Row="3" Grid.Column="1" 
                                 x:Name="BlueTextBox" 
                                 Margin="0,0,0,6" 
                                 PreviewTextInput="NumericTextBox_PreviewTextInput"
                                 TextChanged="RgbTextBox_TextChanged"/>

                        <!-- HSV Values -->
                        <!-- Hue -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                   Text="H:" 
                                   Margin="0,0,6,6" 
                                   VerticalAlignment="Center"
                                   FontSize="11"
                                   Foreground="#FFCCCCCC"/>
                        <TextBox Grid.Row="4" Grid.Column="1" 
                                 x:Name="HueTextBox" 
                                 Margin="0,0,0,6" 
                                 PreviewTextInput="NumericTextBox_PreviewTextInput"
                                 TextChanged="HsvTextBox_TextChanged"/>

                        <!-- Saturation -->
                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                   Text="S:" 
                                   Margin="0,0,6,6" 
                                   VerticalAlignment="Center"
                                   FontSize="11"
                                   Foreground="#FFCCCCCC"/>
                        <TextBox Grid.Row="5" Grid.Column="1" 
                                 x:Name="SaturationTextBox" 
                                 Margin="0,0,0,6" 
                                 PreviewTextInput="NumericTextBox_PreviewTextInput"
                                 TextChanged="HsvTextBox_TextChanged"/>

                        <!-- Value -->
                        <TextBlock Grid.Row="6" Grid.Column="0" 
                                   Text="V:" 
                                   Margin="0,0,6,0" 
                                   VerticalAlignment="Center"
                                   FontSize="11"
                                   Foreground="#FFCCCCCC"/>
                        <TextBox Grid.Row="6" Grid.Column="1" 
                                 x:Name="ValueTextBox" 
                                 Margin="0" 
                                 PreviewTextInput="NumericTextBox_PreviewTextInput"
                                 TextChanged="HsvTextBox_TextChanged"/>
                    </Grid>
                </Border>

                <!-- Hex value -->
                <Border Grid.Row="3" 
                        Background="#FF3D3D3D" 
                        CornerRadius="4"
                        Margin="0,12,0,0">
                    <Grid Margin="12,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="Hex:" 
                                   Margin="0,0,6,0" 
                                   VerticalAlignment="Center"
                                   FontSize="11"
                                   Foreground="#FFCCCCCC"/>
                        <TextBox Grid.Column="1" 
                                 x:Name="HexTextBox" 
                                 Margin="0" 
                                 TextChanged="HexTextBox_TextChanged"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Standard Colors -->
        <Border Grid.Row="2" 
                Background="#FF3D3D3D" 
                CornerRadius="4"
                Margin="0,12,0,12">
            <Grid Margin="12,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Standard Colors" 
                           FontWeight="SemiBold"
                           FontSize="12"
                           Margin="0,0,0,8"
                           Foreground="#FFCCCCCC"/>

                <ItemsControl Grid.Row="1" x:Name="StandardColorsPanel">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="22" Height="22" 
                                    Margin="2" 
                                    CornerRadius="3"
                                    BorderBrush="#FF555555" 
                                    BorderThickness="1" 
                                    Background="{Binding}" 
                                    MouseDown="StandardColor_MouseDown">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.3"/>
                                </Border.Effect>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="OK" 
                    Style="{DynamicResource CustomButton}" 
                    Width="90" Height="28" 
                    Margin="0,0,8,0"
                    Click="OkButton_Click"
                    IsDefault="True"/>
            <Button Content="Cancel" 
                    Style="{DynamicResource CustomButton}" 
                    Width="90" Height="28"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>